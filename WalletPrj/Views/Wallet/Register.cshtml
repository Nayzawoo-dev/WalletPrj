@{
	bool isSuccess = Convert.ToBoolean(TempData["isSuccess"] ?? false);
	string message = Convert.ToString(TempData["message"] ?? string.Empty);
}
<div class="container">
	<div class="row justify-content-center align-items-center">
		<div class="col-md-6">
			<div class="card shadow-lg">
				<div class="card-header text-center bg-primary text-white">
					<h3>Register Your Wallet</h3>
				</div>
				@if (!string.IsNullOrEmpty(message))
				{
					<div id="alert" class="alert alert-@(isSuccess ? "success" : "danger") m-4" role="alert">
						@message
					</div>
				}
				<div class="card-body">
					<form method="post" action="/Wallet/Register">
						<div class="mb-3">
							<label for="email" class="form-label">Wallet Username</label>
							<input type="text" class="form-control" name="WalletUserName" id="WalletUserName">
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Full Name</label>
							<input type="text" class="form-control" name="FullName" id="FullName">
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Mobile No</label>
							<input type="text" class="form-control" name="MobileNo" id="MobileNo">
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Profile Picture</label>
							<input type="file" class="form-control" name="ImagePath" id="ImagePath">
						</div>
						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary">Register</button>
							@* <p class="text-center">You Don't Have a Account</p> *@
							@* <button type="button" class="btn btn-outline-secondary">Register</button> *@
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>