@model WalletModel
<div class="container">
	<div class="row justify-content-center align-items-center">
		<div class="col-md-6">
			<div class="card shadow-lg">
				<div class="card-header text-center bg-primary text-white">
					<h3>Edit Your Profile</h3>
				</div>
				<div class="card-body">
					<form method="post" action="/Wallet/Update/@Model.WalletId">
						<div class="mb-3">
							<label for="email" class="form-label">Profile Picture</label>
							<input type="file" class="form-control" value="" name="ImagePath" id="ImagePath">
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Wallet Username</label>
							<input type="text" class="form-control" value="@Model.WalletUserName" name="WalletUserName" id="WalletUserName">
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">FullName</label>
							<input type="text" class="form-control" value="@Model.FullName" name="FullName" id="FullName">
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Mobile No</label>
							<input type="text" class="form-control" value="@Model.MobileNo" name="MobileNo" id="MobileNo" readonly>
						</div>
						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary">Update</button>
							<a href="/Wallet/Index" class="btn btn-outline-secondary">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
